<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 text-center">
<h1>Questions-index</h1>
<p>This is where the main question posts will be</p>
<br>
<%= link_to "Ask a question", new_question_path, class:"btn btn-primary" %>
<br>
<% @questions.each do |q| %>
  <h3><%= link_to q.title, q %></h3>
  <p><%= q.body %></p>
  <% if current_user %>
  <div class="btn-group">
    <%= link_to "Edit", edit_question_path(q), class: "btn btn-primary btn-xs" %>
    <%= link_to "Delete", question_path(q), method: :delete, data: {confirm: "Are you sure Mofo?"}, class: "btn btn-danger btn-xs"  %>
  </div>
  <% end %>
<% end %>
    </div>
  </div>
</div>