<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1 class="text-center heading">Enter your Question here</h1><br>
      <%= simple_form_for(@question) do |f| %>
        <h2>Title:<br><%= f.text_field :title, size: "40" %></h2><br>
        <h2>Body:<br><%= f.text_area :body, size: "40x12" %></h2><br>
        <%= f.submit "Create", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>